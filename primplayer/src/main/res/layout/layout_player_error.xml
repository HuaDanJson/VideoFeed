<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/ll_player_error"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center"
              android:orientation="horizontal"
              android:visibility="gone">

    <ImageView
        android:id="@+id/iv_errorIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/player_error_icon_content_description"
        android:src="@drawable/icon_live_video_notice_thumbnail"/>

    <TextView
        android:id="@+id/tv_player_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:textColor="@android:color/white"
        android:textSize="@dimen/tv_player_error"
        tools:text="播放异常"/>
</LinearLayout>